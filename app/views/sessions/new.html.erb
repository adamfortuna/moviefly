<%= title "Login" %>
<div id="content" class="single_col">
  <% form_tag session_path do %>
  	<fieldset>
  		<legend>Login with OpenID</legend>
  		<div>
  			<%= label_tag 'openid_identifier', 'OpenID URL' %>
  			<%= text_field_tag 'openid_identifier' %>
  		</div>
    	<div class="buttons">
    		<%= submit_tag 'Sign in' %>
    	</div>
  	</fieldset>	
  <% end -%>
</div>