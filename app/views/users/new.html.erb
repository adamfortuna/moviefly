<%= title "Sign In or Sign Up" %>
<div id="content" class="single_col">
  <% form_for @user, {}, :html => {:id => "openid_form"} do |f| %>
	  <input type="hidden" name="action" value="verify" />
    <%= f.error_messages %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
  	<fieldset>
  		<legend>Sign-in or Create New Account</legend>
  		<div id="openid_choice">
    		<p>Please click your account provider:</p>
    		<p>Keep in mind that you will need to use this same provider each time you login</p>
    		<div id="openid_btns"></div>
		  </div>
			<div id="openid_input_area">
  			<%= text_field_tag :openid_identifier, params[:openid_identifier] || params['openid.identity'] %>
    		<%= submit_tag 'Sign in or Sign up' %>
			</div>
			<noscript>
			  <p>OpenID is service that allows you to log-on to many different websites using a single indentity. Find out <a href="http://openid.net/what/">more about OpenID</a> and <a href="http://openid.net/get/">how to get an OpenID enabled account</a>.</p>
			</noscript>
  <% end -%>
  
  <div>
    <p>OpenID is...</p>
  </div>
</div>

<%- javascript_file 'openid-jquery' %>
<% javascript do %>
  $(document).ready(function() {
    openid.init('openid_identifier');
  });
<% end %>